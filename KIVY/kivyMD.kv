ScreenManager:
    Login_screen:
    Welcome_screen:
    Create_account:
    ElijeEltecnico:
    ElijeElnombreDelasesor:

<Login_screen>:
    name:'login'
    MDCard:
        size_hint: None, None
        size: 700,800
        pos_hint:{"center_x":0.5, "center_y":0.5}
        elevation:10
        padding:20
        spacing:20
        orientation:"vertical"
        
    
    MDLabel:
        id:login_label
        text: "LOGIN"
        padding_y:80
        halign: "center"
        pos_hint:{"center_x":0.5, "center_y":0.7}
        size_hint_y:None
    
    MDTextField:
        id:user
        hint_text:"Usuario"
        mode:"fill"
        icon_right:"account"
        size_hint_x:None
        width:600
        pos_hint:{"center_x":0.5,"center_y":0.6}
    
    MDTextField:
        id:password
        hint_text:"Contraseña"
        mode:"fill"
        icon_right:"eye"
        size_hint_x:None
        width:600
        pos_hint:{"center_x":0.5,"center_y":0.45}
    
    MDFillRoundFlatButton:
        id:iniciar_sesion
        text: "[color=#000000]Inicial secion[/color]"
        pos_hint:{"center_x":0.5,"center_y":0.3}
        text_color:'black'
        on_release: root.iniciar_sesion()
    
    MDFillRoundFlatButton:
        id:crear_cuenta
        text:"[color=#000000]Crear cuenta[/color]"
        pos_hint:{"center_x":0.5,"center_y":0.2}
        text_color:'black'
        on_release:root.manager.current = "Create_account"

<Welcome_screen>
    name:'Welcome_screen'
    MDLabel:
        text:'Welcome'
    
    MDBottomNavigation:
        MDBottomNavigationItem:
            name: "screen 2"
            text: "Home"
            badge_icon: "numeric-10"
            
            MDBoxLayout:
                orientation:"vertical"
                
                MDFillRoundFlatButton:
                    text: "Dar de alta técnico"
                    on_release: root.manager.current = "ElijeEltecnico"
                    pos_hint:{"center_x":0.5,"center_y":0.96}
                    text_color:'black'
                   
                
                MDFillRoundFlatButton:
                    text: "Dar de alta asesor"
                    on_release: app.root.current = "ElijeElnombreDelasesor"
                    pos_hint:{"center_x":0.5,"center_y":0.45}
                    text_color:'black'
                
                MDFillRoundFlatButton:
                    text: "Crear orden"
                    on_release: app.root.current = "BienvenidoUser"
                    pos_hint:{"center_x":0.5,"center_y":0.45}
                    text_color:'black'
                
                MDFillRoundFlatButton:
                    text:"Dar de alta vehiculo"
                    on_release: app.root.current = "Vehiculo"
                    pos_hint:{"center_x":0.5,"center_y":0.45}
                    text_color:'black'
                
                MDFillRoundFlatButton:
                    text:"piramide del vehiculo"
                    on_release: app.root.current = "PiramideDelVehiculo"
                    pos_hint:{"center_x":0.5,"center_y":0.7}
                    text_color:'black'
                
                MDFillRoundFlatButton:
                    text:"letras de la orden"
                    on_release: app.root.current = "TipoDeorden"
                    pos_hint:{"center_x":0.5,"center_y":0.7}
                    text_color:'black'
                
                MDFillRoundFlatButton:
                    text:"guardar todos los numeros de las ordenes"
                    on_release: app.root.current = "NumeroDeOrden"
                    pos_hint:{"center_x":0.5,"center_y":0.7}
                    text_color:'black'
                
                MDFillRoundFlatButton:
                    text:"Dar de alta todos los colores"
                    on_release: app.root.current = "Color1"
                    pos_hint:{"center_x":0.5,"center_y":0.7}
                    text_color:'black'
            
                
        MDBottomNavigationItem:
            name: "screen 3"
            text: '+'
            MDLabel:
                text: 'Crear_orden'
        MDBottomNavigationItem:
            name: 'screen 1'
            text: 'Cerrar sesion'
            badge_icon: "numeric-10"
            on_tab_release: root.manager.current="login"

<Create_account>:
    name:'Create_account'
    MDCard:
        size_hint: None, None
        size: 700,900
        pos_hint:{"center_x":0.5, "center_y":0.5}
        elevation:10
        padding:20
        spacing:20
        orientation:"vertical"
    
    MDLabel:
        id:login_label
        text: "CREAR CUENTA"
        padding_y:80
        halign: "center"
        pos_hint:{"center_x":0.5, "center_y":0.8}
        size_hint_y:None
    
    MDTextField:
        id:user
        hint_text:"Usuario"
        mode:"fill"
        icon_right:"account"
        size_hint_x:None
        width:600
        pos_hint:{"center_x":0.5,"center_y":0.7}
    
    MDTextField:
        id:last_name
        hint_text:"Last_name"
        mode:"fill"
        icon_right:"account"
        size_hint_x:None
        width:600
        pos_hint:{"center_x":0.5,"center_y":0.6}

    
    MDTextField:
        id:correo_electronico
        hint_text:"Correo electronico"
        mode:"fill"
        icon_right:"eye"
        size_hint_x:None
        width:600
        pos_hint:{"center_x":0.5,"center_y":0.5}
    
    MDTextField:
        id:password
        hint_text:"Contraseña"
        mode:"fill"
        icon_right:"eye"
        size_hint_x:None
        width:600
        pos_hint:{"center_x":0.5,"center_y":0.39}
    
    MDFillRoundFlatButton:
        id:crear_cuenta
        text:"[color=#000000]Dar de alta cuenta[/color]"
        pos_hint:{"center_x":0.6,"center_y":0.2}
        text_color:'black'
        on_release:root.crear_cuenta()
    
    MDFillRoundFlatButton:
        id:Regresar
        text:"[color=#000000]Regresar[/color]"
        pos_hint:{"center_x":0.4,"center_y":0.2}
        text_color:'black'
        on_release:root.manager.current = "login"

<ElijeEltecnico>:
    name:'ElijeEltecnico'
    MDFloatLayout:
        MDFloatLayout:
            padding:20
            spacing:20
            orientation:"vertical"
            pos_hint:{"center_x":0.5,"center_y":0.7}
            MDLabel:
                pos_hint:{"center_x":0.9,"center_y":0.7}
                text: "Lista de tecnicos"
            
            MDBoxLayout:
                orientation: "vertical"
                padding:20
                pos_hint:{"center_x":0.5,"center_y":0.5}
                MDBoxLayout:
                    orientation: "horizontal"
                    MDTextField
                        id:user
                        hint_text:"Nombre completo"
                        mode: "fill"
                        padding:20
                        spacing:20
                    MDRaisedButton:
                        id:click_busqueda
                        text:"Buscar"
                        margin:20
                        spacing:20
                MDScrollView:
                    MDBoxLayout:
                        orientation: "horizontal"
                        MDList:
                            id:"container_list"
                            ThreeLineAvatarListItem:
                                text: "Hector"
                        MDList:
                            id:"container_list"
                            ThreeLineAvatarListItem:
                                text: "Three-line item with avatar"
                                secondary_list: "Secondary text here"
                                tertiary_text: "fit more text than usual"
                MDFillRoundFlatButton:
                    id:Regresar
                    text:"[color=#000000]Regresar[/color]"
                    pos_hint:{"center_x":0.15,"center_y":0.1}
                    text_color:'black'
                    on_release:root.manager.current = "Home"

